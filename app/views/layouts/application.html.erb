<!DOCTYPE html>
<html>
  <head>
    <title><%= t('title') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_pack_tag 'application' %>

    <%= yield(:head) %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <a href='/'>
      <h1>
        <% if @current_user %>
          <img src="<%= "https://api.adorable.io/avatars/64/#{@current_user}.png" %>" />
        <% end %>
        <%= t('title') %>
      </h1>
    </a>
    <%= yield %>
  </body>
</html>
